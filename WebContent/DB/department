create table department(  
   depart_id number primary key not null,
   p_depart_id number not null,   
   dpname varchar2(500) not null,               
   init varchar2(100) not null,                
   d_info1 varchar2(4000) default null,                       
   d_info2 varchar2(4000) default null,                        
   d_info3 varchar2(4000) default null,                        
   d_info4 varchar2(4000) default null,                       
   d_info5 varchar2(4000) default null,                       
   d_info6 varchar2(4000) default null,                       
   d_info7 varchar2(4000) default null,                      
   d_info8 varchar2(4000) default null,                        
   d_info9 varchar2(4000) default null,                        
   d_info10 varchar2(4000) default null                        
   );
   
   create sequence department_seq nocache